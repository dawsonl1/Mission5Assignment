<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"]</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/photos/Fortnite_Favicon.webp">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Chakra+Petch:wght@400;500;600&family=Luckiest+Guy&display=swap" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/site.css" />

    <!-- jQuery (needed for calculator page) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
</head>
<body class="site-body d-flex flex-column min-vh-100">

    <div class="site-backdrop">
        <div class="orb orb-left"></div>
        <div class="orb orb-right"></div>
        <div class="grid-overlay"></div>
    </div>

    <!-- Header / Navigation -->
    <div class="site-content d-flex flex-column flex-fill">
    <header>
        <nav class="navbar navbar-expand-lg neon-nav">
            <div class="container">
                <a class="navbar-brand" href="/">My Hobby: Fortnite</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Pricing">Tutoring Price Calculator</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="container my-4 flex-fill">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="site-footer py-3 mt-auto">
        <div class="container d-flex justify-content-between">
            <span>Â© Built By Dawson Pitcher @DateTime.Now.Year</span>
            <span>IS 413 Mission 5</span>
        </div>
    </footer>
    </div>

    <!-- Bootstrap JS bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>